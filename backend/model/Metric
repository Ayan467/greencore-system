const mongoose = require('mongoose');

const metricSchema = new mongoose.Schema({
    date: {
        type: Date,
        required: true
    },
    carbonFootprint: Number,
    greenSpace: Number,
    renewableEnergy: Number,
    wasteRecycled: Number,
    airQuality: Number,
    waterQuality: Number,
    location: String
}, {
    timestamps: true
});

module.exports = mongoose.model('Metric', metricSchema);
